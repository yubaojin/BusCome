/* pages/transfer/transfer.wxss */
page {
  background-color: #eee;
}

.top {
  background-color: white;
  float: left;
  width: 95%;
  height: 95px;
  padding: 0px 5pc 0px 5px;
  border-top: 1px solid #eee;
}

.topleft {
  float: left;
  width: 20%;
  text-align: center;
  height: 70px;
  padding-top: 21px;
}

.topleft image {
  float: left;
  width: 90%;
  text-align: center;
  height: 50px;
}

.topright {
  float: left;
  width: 79%;
  height: 100%;
  line-height: 70px;
}

.toprighttop {
  float: left;
  width: 100%;
  height: 50%;
  line-height: 34px;
}

.toprighttop1 {
  float: left;
  text-align: center;
  height: 14%;
  padding-top: 10px;
  width: 10%;
}

.toprighttop1 image {
  float: left;
  text-align: center;
  padding-top:2px;
  width: 100%;
  height: 20px;
}

.toprighttop2 {
  float: left;
  width: 60%;
  height: 48px;
  line-height: 48px;
  padding-top:5px
}

.toprighttop2 input {
  float: left;
  width: 100%;
  height: 35px;
  line-height: 35px;
  border-radius: 10px;
  padding-left: 10px;
}
.toprighttop2 input::-webkit-input-placeholder{/*Webkit browsers*/
   color: blue;
}
.toprighttop2 input:-moz-placeholder{/*Mozilla Firefox 4 to 8*/
   color: blue;
}
.toprighttop2 input::moz-placeholder{/*Mozilla Firefox 19+*/
   color: blue;
}
.toprighttop2 input:-ms-input-placeholder{/*Internet Explorer 10+*/
    color: blue;
}

.toprighttop3 {
  float: right;
  width: 18%;
  text-align: right;
  height: 43px;
  line-height: 43px;
  color: #0099ff;
}

.toprightbottom {
  float: left;
  width: 100%;
  height: 34px;
  line-height: 34px;
  border-top: 1px solid #eee;
}
